<div class="container">
<h1><%= @client.name()%></h1>

<h4>Update Client Info</h4>

<form action="/client_list/<%= @client.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="update_client">Change Info</label>
  <input id="update_client" name="update_client" type="text">
  <button type="submit">Update</button>
</form>

<h4>Remove <%= @client.name()%> from the salon</h4>
<form action='/client_list/<%= @client.id() %>' method='post'>
     <input name="_method" type="hidden" value="delete">
     <button class='btn btn-default'>Delete</button>
</form>
<a href="/">Home</a>
</div>
