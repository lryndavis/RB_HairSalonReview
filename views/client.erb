<div class="container">

  <h2 class="italicize"><%= @client.name()%></h2>

    <h4>Update Client Info:</h4>

      <form action="/client_list/<%= @client.id() %>" method="post" class="form-inline">
        <input name="_method" type="hidden" value="patch">
        <label for="update_client"></label>
        <input id="update_client" name="update_client" type="text" class="form-control">
        <button type="submit" class="btn btn-default">Update</button>
      </form>

    <h4>Remove <%= @client.name()%> from the salon:</h4>

    <form action='/client_list/<%= @client.id() %>' method='post'>
       <input name="_method" type="hidden" value="delete">
       <button class='btn btn-default'>Delete</button>
    </form>
    </br>
    <a href="/" class="homelink">HOME</a>
    </br>
    <a href="/client_list" class="homelink">RETURN TO CLIENTS</a>
    </br>
    <a href="/stylist_list" class="homelink">RETURN TO STYLISTS</a>

</div>
