<div class="container">

  <h2 class ="italicize"><%= @stylist.name()%></h2>

  <% if @clients.any?() %>
    <h4><%= @stylist.name()%>'s Clients:</h4>
        <ul>
        <% @clients.each() do |client| %>
          <li><a href="/client_list<%= client.id %>"><%= client.name() %></a></li>
        <% end %>
      </ul>
      <% else %>
    <h4><%= @stylist.name()%> doesn't appear to have any clients. Add some below!</h3>
    <% end %>


    <form action='/stylist/<%= @stylist.id() %>' method ='post' class="form-inline">
      <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">
      <label for='name'></label>
      <input id='name' name='name' type='text' class='form-control'>

      <button type="submit" class="btn btn-default">Add New</button>
    </form>

    <h4>Update Stylist Info:</h3>

      <form action="/stylist/<%= @stylist.id() %>" method="post" class="form-inline">
        <input name="_method" type="hidden" value="patch">
        <label for="update_name"></label>
        <input id="update_name" name="update_name" type="text" class="form-control">
        <button type="submit" class="btn btn-default">Update</button>
      </form>

      <h4>Remove <%= @stylist.name()%> from the Salon:</h4>

        <form action='/stylist/<%= @stylist.id() %>' method='post'>
           <input name="_method" type="hidden" value="delete">
           <button class='btn btn-default'>Delete</button>
        </form>
      </br>
      <a href="/" class="homelink">HOME</a>
    </br>
    <a href="/stylist_list" class="homelink">RETURN TO STYLISTS</a>
</div>
